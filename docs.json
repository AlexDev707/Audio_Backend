{
    "openapi": "3.0.0",
    "info": {
      "title": "Rest Api",
      "version": "1.0.0",
      "description": "REST Api"
    },
    "servers": [
      {
        "url": "http://localhost:5000/api",
        "description": "Development server"
      },
      {
        "url": "https://production.com/api",
        "description": "Production server"
      }
    ],
    "paths": {
      "/new": {
        "get": {
            "description": "Get audios sorted by date",
            "responses": {
                "200": {
                    "description": "OK",
                    "content": {
                        "application/json" : {
                         "schema":{
                             "type": "array",
                             "items": {
                                 "type": "object",
                                 "properties": {
                                    "author": {
                                      "type": "string",
                                      "example": "author 1"
                                    },
                                    "title": {
                                      "type": "string",
                                      "example": "title 1"
                                    },
                                    "audioUrl": {
                                      "type": "string",
                                      "example": "http://url.com"
                                    },
                                    "imageUrl": {
                                      "type": "string",
                                      "example": "http://url.com"
                                    },
                                    "streamsCount": {
                                      "type": "number",
                                      "example": 0
                                    },
                                    "genres": {
                                      "type": "array",
                                      "items":{
                                          "type":"string"
                                      },
                                      "example": ["rock", "jazz"]
                                      
                                    },"createdAt": {
                                        "type": "string",
                                      "format": "date-time",
                                      "example": "2022-01-23T10:46:06.831Z"
                                      },
                                      "_id": {
                                          "type": "string",
                                        "format": "uuid" ,
                                        "example": "61ed31eedacddd4d88b1daf6"      
                                    }
                                  }
                             }
                         }
                        }
                    }
                },
                "500": {
                    "description": "Common error code",
                    "content":{}
                }
            }
          }
      },
      "/audios/:audioId/listen": {
          "patch": {
            "description": "Increment streams count",
            "responses": {
                "200": {
                    "description": "OK",
                    "content": {
                        "application/json" : {

                            "schema":{
                                "type":"object",
                                "properties": {
                                    "author": {
                                      "type": "string",
                                      "example": "author 1"
                                    },
                                    "title": {
                                      "type": "string",
                                      "example": "title 1"
                                    },
                                    "audioUrl": {
                                      "type": "string",
                                      "example": "http://url.com"
                                    },
                                    "imageUrl": {
                                      "type": "string",
                                      "example": "http://url.com"
                                    },
                                    "streamsCount": {
                                      "type": "number",
                                      "example": 0
                                    },
                                    "genres": {
                                      "type": "array",
                                      "items":{
                                          "type":"string"
                                      }
                                    },
                                    "createdAt": {
                                        "type": "string",
                                      "format": "date-time",
                                      "example": "2022-01-23T10:46:06.831Z"
                                      },
                                      "_id": {
                                          "type": "string",
                                        "format": "uuid" ,
                                        "example": "61ed31eedacddd4d88b1daf6"      
                                    }
                                  }
                            }
                        }
                    }
                },
                "500": {
                    "description": "Common error code",
                    "content": {}
                }
            }
          }
      }
    }
  }